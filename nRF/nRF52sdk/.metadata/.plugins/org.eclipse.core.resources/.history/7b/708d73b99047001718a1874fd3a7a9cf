	switch (currentState) {
		case STATE_SLEEP:

			break;
		case STATE_READ:
			if(mode == MODE_SLEEP) {

			}
			break;
		case STATE_RECOGNITION:

			break;
		default:
			break;
	}
}

/** @brief Function for application main entry.
 */
int main(void) {
	device_init();
	app_init();

	// Enter main loop.
	for (;;) {
		power_manage();
	}
}
