         	android:layout_width="match_parent"
         	android:layout_height="match_parent"
         	android:layout_weight="1"
         	android:ems="10"
         	android:inputType="number"
         	android:text="0" >

             <requestFocus />
         </EditText>

         <TextView
         	android:id="@+id/textView3"
         	android:layout_width="match_parent"
         	android:layout_height="match_parent"
