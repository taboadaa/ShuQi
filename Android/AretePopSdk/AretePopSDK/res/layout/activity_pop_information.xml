<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_setting_tab2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p5"
    android:orientation="vertical" >
    
    <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="48dp"
         android:background="@drawable/titlebar_background"
         android:orientation="horizontal" >
  
    <Button
    	android:id="@+id/about_navigation_back_button"
    	android:layout_width="wrap_content"
    	android:layout_height="30.0dip"
    	android:layout_alignParentLeft="true"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="5.0dip"
    	android:background="@drawable/navigation_bar_btn"
    	android:contentDescription="@null"
    	android:ellipsize="end"
    	android:gravity="center_vertical|center_horizontal"
    	android:maxWidth="100.0dip"
    	android:minWidth="48.0dip"
    	android:paddingBottom="0.0dip"
    	android:paddingLeft="11.0dip"
    	android:paddingRight="8.0dip"
    	android:paddingTop="0.0dip"
    	android:shadowColor="#81000000"
    	android:shadowDy="-1.0"
    	android:shadowRadius="1.0"
    	android:singleLine="true"
    	android:text="Settings"
    	android:textColor="#ffffffff"
    	android:textSize="13.0dip"
    	android:textStyle="bold" />
	
    <TextView
        android:id="@+id/titlebar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:shadowColor="#80000000"
        android:shadowDy="-1.0"
        android:shadowRadius="1.0"
        android:text="About"
        android:textColor="#ffffffff"
        android:textSize="20.0dip"
        android:textStyle="bold" />

</RelativeLayout>

    <ListView
        android:id="@+id/about_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/round_conner"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:fadingEdgeLength="1dp" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_popInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blank" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/Diagnostic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnostic"
            android:textColor="#000000" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0% "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>