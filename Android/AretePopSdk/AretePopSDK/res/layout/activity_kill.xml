<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_setting_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/titlebar_background"
        android:orientation="horizontal" >

        <Button
        	android:id="@+id/kill_navigation_back_button"
        	android:layout_width="wrap_content"
        	android:layout_height="30.0dip"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="5.0dip"
        	android:background="@drawable/navigation_bar_btn"
        	android:contentDescription="@null"
        	android:ellipsize="end"
        	android:gravity="center_vertical|center_horizontal"
        	android:maxWidth="100.0dip"
        	android:minWidth="48.0dip"
        	android:paddingBottom="0.0dip"
        	android:paddingLeft="11.0dip"
        	android:paddingRight="8.0dip"
        	android:paddingTop="0.0dip"
        	android:shadowColor="#81000000"
        	android:shadowDy="-1.0"
        	android:shadowRadius="1.0"
        	android:singleLine="true"
        	android:text="TagAccess"
        	android:textColor="#ffffffff"
        	android:textSize="13.0dip"
        	android:textStyle="bold" />

        <TextView
            android:id="@+id/titlebar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:shadowColor="#80000000"
            android:shadowDy="-1.0"
            android:shadowRadius="1.0"
            android:text="Kill"
            android:textColor="#ffffffff"
            android:textSize="20.0dip"
            android:textStyle="bold" />
        
         <Button
         	android:id="@+id/kill_done_btn"
         	android:layout_width="wrap_content"
         	android:layout_height="30.0dip"
         	android:layout_alignBaseline="@+id/titlebar_text"
         	android:layout_alignBottom="@+id/titlebar_text"
         	android:layout_alignParentRight="true"
         	android:layout_marginRight="5dp"
         	android:background="@drawable/title_btn"
         	android:gravity="center_vertical|center_horizontal"
         	android:maxWidth="100.0dip"
         	android:minWidth="48.0dip"
         	android:paddingBottom="0.0dip"
         	android:paddingLeft="0.0dip"
         	android:paddingRight="0.0dip"
         	android:paddingTop="0.0dip"
         	android:shadowColor="#81000000"
         	android:shadowDy="-1.0"
         	android:shadowRadius="1.0"
         	android:singleLine="true"
         	android:text="done"
         	android:textColor="#ffffffff"
         	android:textSize="13.0dip"
         	android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Tag"
            android:textColor="#000000" />

        <EditText
        	android:id="@+id/kill_targetTag"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="5dp"
        	android:ems="10" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:text="Kill Password(HEX)"
                android:textColor="#000" />

            <EditText
            	android:id="@+id/kill_pass"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:ems="10"
            	android:gravity="center"
            	android:text="00000000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>