<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/p5"
	android:orientation="vertical"
	tools:context="com.arete.pop.OptionActivity" >

     <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="48dp"
         android:background="@drawable/titlebar_background"
         android:orientation="horizontal" >
  
    <Button
    	android:id="@+id/option_navigation_back_button"
    	android:layout_width="wrap_content"
    	android:layout_height="30.0dip"
    	android:layout_alignParentLeft="true"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="5.0dip"
    	android:background="@drawable/navigation_bar_btn"
    	android:contentDescription="@null"
    	android:ellipsize="end"
    	android:gravity="center_vertical|center_horizontal"
    	android:maxWidth="100.0dip"
    	android:minWidth="48.0dip"
    	android:paddingBottom="0.0dip"
    	android:paddingLeft="11.0dip"
    	android:paddingRight="8.0dip"
    	android:paddingTop="0.0dip"
    	android:shadowColor="#81000000"
    	android:shadowDy="-1.0"
    	android:shadowRadius="1.0"
    	android:singleLine="true"
    	android:text="BACK"
    	android:textColor="#ffffffff"
    	android:textSize="13.0dip"
    	android:textStyle="bold" />
	
    <TextView
        android:id="@+id/titlebar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:shadowColor="#80000000"
        android:shadowDy="-1.0"
        android:shadowRadius="1.0"
        android:text="Settings"
        android:textColor="#ffffffff"
        android:textSize="20.0dip"
        android:textStyle="bold" />

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/optionList_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_conner"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp"
            android:fadingEdge="vertical|horizontal"
            android:fadingEdgeLength="1dp" >

        </ListView>

        <ListView
            android:id="@+id/optionList_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_conner"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp"
            android:fadingEdge="vertical|horizontal"
            android:fadingEdgeLength="1dp" >

        </ListView>

        <ListView
            android:id="@+id/optionList_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_conner"
            android:dividerHeight="1dp"
            android:fadingEdge="vertical|horizontal"
            android:fadingEdgeLength="1dp" >

        </ListView>

    </LinearLayout>

</LinearLayout>
